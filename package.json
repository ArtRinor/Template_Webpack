{
  "name": "template_webpack",
  "version": "2.0.0",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack serve --mode development",
    "build": "cross-env NODE_ENV=production webpack --mode production",
    "lint": "npm run stylelint && npm run eslint",
    "stylelint": "stylelint 'src/**/*.css'",
    "eslint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "format": "npm run prettier && npm run csscomb",
    "prettier": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css}'",
    "csscomb": "csscomb src/**/*.css",
    "prebuild": "npm run lint",
    "pre-commit": "npm run format && npm run build && git add ."
  },
  "pre-commit": "pre-commit",
  "author": "Illia Chyrkov",
  "license": "ISC",
  "dependencies": {
    "css-minimizer-webpack-plugin": "^3.0.2",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-typescript": "^7.14.5",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.0.0",
    "csscomb": "^4.3.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^2.1.0",
    "nunjucks": "^3.2.3",
    "nunjucks-html-loader": "^1.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.3.2",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-order": "^4.1.0",
    "stylelint-order-config-csscomb": "^0.1.2",
    "stylelint-prettier": "^1.2.0",
    "typescript": "^4.3.5",
    "webpack": "^5.45.1",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2"
  }
}
